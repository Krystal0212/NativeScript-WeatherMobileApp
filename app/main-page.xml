<Page xmlns="http://schemas.nativescript.org/tns.xsd"
 xmlns:navBar='PageLayout/BottomNav'
    xmlns:tabs='PageLayout/Tabs'
    navigatingTo="onNavigatingTo">

    <ActionBar backgroundColor="#28a99e">
        <ActionItem>
            <Image src="~/assets/battery-status/half-battery.png" width="28" height="38" />
        </ActionItem>
        <ActionItem>
            <Image src="" width="12"/>
        </ActionItem>
    </ActionBar>
    <GridLayout backgroundColor="#000">
        <GridLayout rows="*,auto" backgroundColor="#ccc">
            <!-- Navigation Pages -->
            <tabs:leftTab/>
            <tabs:midTab/>
            <tabs:rightTab/>
            <!-- Navigation Bar -->
            <navBar:Nav/>
        </GridLayout>

        <!-- Floating Main Button -->
        <GridLayout borderRadius="50%" width="85" height="85" backgroundColor="#000"
            verticalAlignment="bottom" horizontalAlignment="center" marginBottom="35" tap="{{ onMainPageTap }}">
            <Image src="~/assets/hsr.png" stretch="aspectFill" 
                verticalAlignment="center" horizontalAlignment="center"></Image>
        </GridLayout>

    </GridLayout>
</Page>