<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="My App" icon="" />
    <StackLayout class="p-4">
        <Label text="Please tap me" class="text-3xl text-center" />
        <Button text="TAP" tap="{{ onTap }}" class="-primary" />
        <Label text="{{ message }}" class="text-lg text-center text-gray-400" textWrap="true" />
    </StackLayout>
    <TabView androidTabsPosition="bottom">
        <!-- Tab 1 with Icon -->
        <TabViewItem>
            <StackLayout orientation="vertical" horizontalAlignment="center">
                <Image src="app/assets/star.png" stretch="none" />
                <Label text="Tab 1" />
            </StackLayout>
            <StackLayout>
                <!-- Content for Tab 1 -->
            </StackLayout>
        </TabViewItem>

        <!-- Tab 2 with Star Icon -->
        <TabViewItem>
            <StackLayout orientation="vertical" horizontalAlignment="center">
                <Image src="app/assets/star.png" stretch="none" />
                <Label text="Tab 2" />
            </StackLayout>
            <StackLayout>
                <!-- Content for Tab 2 -->
            </StackLayout>
        </TabViewItem>

        <!-- Tab 3 with Icon -->
        <TabViewItem>
            <StackLayout orientation="vertical" horizontalAlignment="center">
                <Image src="app/assets/star.png" stretch="none" />
                <Label text="Tab 3" />
            </StackLayout>
            <StackLayout>
                <!-- Content for Tab 3 -->
            </StackLayout>
        </TabViewItem>
    </TabView>
</Page>
