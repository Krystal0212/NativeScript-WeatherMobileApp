<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
xmlns:nav="PageLayout/BottomNav"
xmlns:tab="PageLayout/Tabs"
navigatingTo="onNavigatingTo">
    <ActionBar title="{{ titleName }}" backgroundColor="#323219" style="color: white; font-size: 17px">
        <ActionItem>
            <Label text="{{ batteryLevel }}" style="color: white; font-size: 17px;" />
        </ActionItem>
        <ActionItem>
            <Image src="{{ iconPath }}" width="38" height="38" />
        </ActionItem>
        <ActionItem>
            <Image src="" width="12"/>
        </ActionItem>
    </ActionBar>
    
    <GridLayout backgroundColor="#323219">
        <GridLayout rows="*,auto" >

            <!-- Navigation Pages -->
            <tab:midTabs/>
            <tab:leftTabs/>
            <tab:rightTabs/>

            <!-- Navigation Bar -->
        <nav:Nav/>
    </GridLayout>

        <!-- Floating Main Button -->
    <GridLayout borderRadius="50%" width="85" height="85" backgroundColor="#ffffff"
        verticalAlignment="bottom" horizontalAlignment="center" marginBottom="35" tap="{{ onMainPageTap }}">
        <Image src="~/assets/hsr.png" stretch="aspectFill" 
            verticalAlignment="center" horizontalAlignment="center"></Image>
    </GridLayout>

    </GridLayout>
</Page>
