<GridLayout row="1" columns="*,*,*" height="80" backgroundColor="#18848e">
    <StackLayout col="0"  tap="{{ onLocationCheckTap }}" backgroundColor="{{ locationCheckBgColor }}" verticalAlignment="middle" horizontalAlignment="center" width="140" height="80">
        <Image src="~/assets/search-location.png" width="28" height="38"></Image>
        <Label text="Location Check" textAlignment="center" fontSize="10"></Label>
    </StackLayout>
    <StackLayout col="1" verticalAlignment="middle" horizontalAlignment="center">
        <Label text="Current Location" textAlignment="center" fontSize="10" marginTop="38"></Label>
    </StackLayout>
    <StackLayout col="2" tap="{{ onSettingsTap }}" backgroundColor="{{ settingsBgColor }}" verticalAlignment="middle" horizontalAlignment="center" width="140" height="80">
        <Image src="~/assets/settings.png" width="28" height="38"></Image>
        <Label text="Settings" textAlignment="center" fontSize="10"></Label>
    </StackLayout>
</GridLayout>