<StackLayout id="toggleLayout" backgroundColor="#9C89B8" verticalAlignment="middle" horizontalAlignment="center"> 
    <GridLayout backgroundColor="white" width="100%" height="100%">
        <!-- First GridLayout -->
        <GridLayout rows="auto, *" columns="*" backgroundColor="white" width="100%" height="100%">
            <Image src="{{ weatherBackground }}" animated="true" stretch="aspectFit" row="0" col="0"/>
        </GridLayout>

        <!-- Second GridLayout -->
        <GridLayout rows="auto, *" columns="*" backgroundColor="white" width="100%" height="45%">
            <StackLayout row="1" col="0" verticalAlignment="top" marginTop="30%" horizontalAlignment="center">
                <ScrollView orientation="horizontal" row="1" col="0" width="100%" height="100%">
                    <StackLayout orientation="horizontal" width="250%" height="100%">
                        <!-- Page 1 -->
                        <StackLayout width="20%" backgroundColor="#FF7F7F" horizontalAlignment="center" verticalAlignment="center">
                            <Label text="{{ day1.date }}" class="compact-label compact-label-header"/>
                            <Label text="{{ day1.temperature }}" class="compact-label"/>
                            <Label text="{{ day1.humidity }}" class="compact-label"/>
                            <Label text="{{ day1.windSpeed }}" class="compact-label"/>
                            <Label text="{{ day1.description }}" class="compact-label"/>
                        </StackLayout>

                        <!-- Page 2 -->
                        <StackLayout width="20%" backgroundColor="#ACC8E5" horizontalAlignment="center" verticalAlignment="center">
                            <Label text="{{ day2.date }}" class="compact-label-2 compact-label-header"/>
                            <Label text="{{ day2.temperature }}" class="compact-label-2"/>
                            <Label text="{{ day2.humidity }}" class="compact-label-2"/>
                            <Label text="{{ day2.windSpeed }}" class="compact-label-2"/>
                            <Label text="{{ day2.description }}" class="compact-label-2"/>
                        </StackLayout>

                        <StackLayout width="20%" backgroundColor="#AAFFEE">
                            <Label text="{{ day3.date }}" class="compact-label-3 "/>
                            <Label text="{{ day3.temperature }}" class="compact-label-3 compact-label-header"/>
                            <Label text="{{ day3.humidity }}" class="compact-label-3"/>
                            <Label text="{{ day3.windSpeed }}" class="compact-label-3"/>
                            <Label text="{{ day3.description }}" class="compact-label-3"/>
                        </StackLayout>

                        <StackLayout width="20%" backgroundColor="#FFFFEB">
                            <Label text="{{ day4.date }}" class="compact-label-4 compact-label-header"/>
                            <Label text="{{ day4.temperature }}" class="compact-label-4"/>
                            <Label text="{{ day4.humidity }}" class="compact-label-4"/>
                            <Label text="{{ day4.windSpeed }}" class="compact-label-4"/>
                            <Label text="{{ day4.description }}" class="compact-label-4"/>
                        </StackLayout>

                        <StackLayout width="20%" backgroundColor="#FF85FF">
                            <Label text="{{ day5.date }}" class="compact-label-5  compact-label-header"/>
                            <Label text="{{ day5.temperature }}" class="compact-label-5"/>
                            <Label text="{{ day5.humidity }}" class="compact-label-5"/>
                            <Label text="{{ day5.windSpeed }}" class="compact-label-5"/>
                            <Label text="{{ day5.description }}" class="compact-label-5"/>
                        </StackLayout>
                    </StackLayout>
                </ScrollView>
            </StackLayout>
        </GridLayout>

        <StackLayout orientation="horizontal" marginTop="300" width="90%">
            <Label text="{{dateValue}}" verticalAlignment="center" width="100%" class="textProgressDate"/>
        </StackLayout>

        <StackLayout orientation="horizontal" marginTop="380" width="90%">
            <Label text="Temperature" verticalAlignment="center" width="28%" class="textProgress"/>
            <Label text="{{temperatureValuePercent}}" verticalAlignment="center" width="10%" class="textProgressRed"/>
            <Progress width="65%" value= "{{temperatureValue}}" backgroundColor="#fff" color="#FF7F7F"/>
        </StackLayout>

        <StackLayout orientation="horizontal" marginTop="430" width="90%" >
            <Label text="Humidnity" verticalAlignment="center" width="28%" class="textProgress"/>
            <Label text="{{humidValuePercent}}" verticalAlignment="center" width="10%" class="textProgressBlue"/>
            <Progress width="65%" value= "{{humidValue}}" backgroundColor="#fff" color="#DEF4FC"/>
        </StackLayout>


        <StackLayout orientation="horizontal" marginTop="480" width="90%" >
        <Label text="Feels Like" verticalAlignment="center" width="28%" class="textProgress"/>
            <Label text="{{feelLikeTemperatureValuePercent}}" verticalAlignment="center" width="10%" class="textProgressRed"/>
            <Progress width="65%" value= "{{feelLikeTemperatureValue}}" backgroundColor="#fff" color="#FF7F7F"/>
        </StackLayout>

        <StackLayout orientation="horizontal" marginTop="530" width="90%" >
            <Label text="Wind Speed" verticalAlignment="center" width="28%" class="textProgress"/>
            <Label text="{{speedValue}}" verticalAlignment="center" width="72%" class="textProgressWind"/>
        </StackLayout>

        <StackLayout rows="auto, *" columns="*" marginTop="12%" verticalAlignment="top" horizontalAlignment="center">
            <StackLayout class="circle" >
                <Image src="{{weatherIcon}}" class="main-icon" row="0" col="0"/>
            </StackLayout>
        </StackLayout>
    </GridLayout>
</StackLayout>